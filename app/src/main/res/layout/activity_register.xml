<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:fontFamily="@font/archivo_black"
        android:text="DIVYAN HEALTH CARE"
        android:textAlignment="center"
        android:layout_marginTop="100dp"
        android:textColor="@color/slate"
        android:textSize="35sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="117dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:fontFamily="@font/roboto_medium"
        android:text="REGISTER"
        android:textAlignment="center"
        android:textColor="@color/slate"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="255dp" />

    <EditText
        android:id="@+id/email_register"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:background="@drawable/rounded_editext"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="20dp"
        android:elevation="5dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:lines="1"
        android:minHeight="48dp"
        android:paddingStart="5dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:textColor="#434141"
        android:textColorHint="#414141"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="361dp" />

    <EditText
        android:id="@+id/username_register"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:background="@drawable/rounded_editext"
        android:drawableStart="@drawable/baseline_person_24"
        android:drawablePadding="20dp"
        android:elevation="5dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="Username"
        android:inputType="text"
        android:lines="1"
        android:minHeight="48dp"
        android:paddingStart="5dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:textColor="#434141"
        android:textColorHint="#414141"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="361dp" />

    <EditText
        android:id="@+id/passsword_register"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_editext"
        android:drawableStart="@drawable/baseline_key_24"
        android:drawablePadding="20dp"
        android:elevation="5dp"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:hint="password"
        android:inputType="textPassword"
        android:paddingStart="5dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:textColor="#434141"
        android:textColorHint="#414141"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="547dp" />

    <EditText
        android:id="@+id/confirm_passsword_register"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_editext"
        android:drawableStart="@drawable/baseline_key_24"
        android:drawablePadding="20dp"
        android:elevation="5dp"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:hint="confirm password"
        android:inputType="textPassword"
        android:paddingStart="5dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:textColor="#434141"
        android:textColorHint="#414141"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="630dp" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/slate"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto_medium"
        android:text="REGISTER"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="735dp" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="858dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Already have an account?"
            android:textColor="@color/slate"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:paddingStart="8dp"
            android:text="Login"
            android:textColor="@color/slate"
            android:textSize="22sp" />
    </LinearLayout>


</LinearLayout>